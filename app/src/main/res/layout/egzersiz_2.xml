<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gri"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mavi"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egzersiz 1"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="20sp"
            android:textColor="@color/beyaz"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            ></TextView>



        <Button
            android:id="@+id/örnek_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button_beyaz"
            android:text="Örnek"
            android:textColor="@color/beyaz"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans_semibold"></Button>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_button">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tur"
                android:layout_gravity="center"
                android:textColor="@color/siyah_text_color"
                android:fontFamily="@font/open_sans"
                android:textSize="24sp"></TextView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/siyah_text_color"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/tur_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="24sp"
                    android:textColor="@color/mavi"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="24sp"
                    android:textColor="@color/siyah_text_color"></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="24sp"
                    android:textColor="@color/siyah_text_color"></TextView>
            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:padding="10dp"
            android:text="Yüzük parmağı"
            android:textColor="@color/turuncu_text_color"
            android:textSize="16sp"></TextView>


        <SeekBar
            android:id="@+id/seek_bar_1"
            android:layout_width="270dp"
            android:layout_height="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="-40dp"

            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_thumb"

           >


        </SeekBar>


        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Baş parmak"
            android:textColor="@color/turuncu_text_color"
            android:textSize="16sp"></TextView>

        <SeekBar
            android:id="@+id/seek_bar_2"
            android:layout_width="270dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-40dp"
            android:layout_marginBottom="135dp"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_thumb"
            >


        </SeekBar>


    </RelativeLayout>



</LinearLayout>