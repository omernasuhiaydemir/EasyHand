<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gri"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mavi"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egzersiz 1"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="20sp"
            android:textColor="@color/beyaz"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
           ></TextView>



        <Button
            android:id="@+id/örnek_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button_beyaz"
            android:text="Örnek"
            android:textColor="@color/beyaz"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans_semibold"></Button>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





    <TextView
        android:id="@+id/saniye_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/siyah_text_color"
        android:text="Serçe parmağın ile butona dokun!"
        android:padding="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="20sp"></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_button">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tur"
            android:layout_gravity="center"
            android:textColor="@color/siyah_text_color"
            android:fontFamily="@font/open_sans"
            android:textSize="24sp"></TextView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/siyah_text_color"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/tur_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="24sp"
                android:textColor="@color/mavi"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:fontFamily="@font/open_sans_bold"
                android:textSize="24sp"
                android:textColor="@color/siyah_text_color"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="24sp"
                android:textColor="@color/siyah_text_color"></TextView>
        </LinearLayout>



    </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buton_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mor_oval"
            android:text="İşaret parmağı"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:shadowColor="@color/beyaz"
            android:textColor="@color/beyaz"
            android:fontFamily="@font/open_sans_semibold"
            android:textAllCaps="false"
            ></Button>



        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/layout_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buton_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mor_oval"
            android:text="Orta parmak"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:shadowColor="@color/beyaz"
            android:textColor="@color/beyaz"
            android:fontFamily="@font/open_sans_semibold"
            android:textAllCaps="false"
            ></Button>



        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buton_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mor_oval"
            android:text="Yüzük parmağı"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:shadowColor="@color/beyaz"
            android:textColor="@color/beyaz"
            android:fontFamily="@font/open_sans_semibold"
            android:textAllCaps="false"
            ></Button>



        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buton_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mor_oval"
            android:text="Serçe parmak"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:shadowColor="@color/beyaz"
            android:textColor="@color/beyaz"
            android:fontFamily="@font/open_sans_semibold"
            android:textAllCaps="false"
            ></Button>



        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>




</LinearLayout>